{
  "name": "@aradzie/chatterbox",
  "version": "0.1.0",
  "description": "Generates text based on a context-free grammar",
  "author": "Aliaksandr Radzivanovich",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/aradzie/chatterbox.git"
  },
  "bugs": {
    "url": "https://github.com/aradzie/chatterbox/issues"
  },
  "homepage": "https://github.com/aradzie/chatterbox",
  "keywords": [
    "context-free grammar",
    "context-free",
    "grammar",
    "langauge generator",
    "generator",
    "lorem ipsum",
    "lorem",
    "ipsum"
  ],
  "main": "lib-commonjs/index.js",
  "types": "lib-commonjs/index.d.ts",
  "module": "lib/index.js",
  "scripts": {
    "build": "rm -fr lib-commonjs; rm -fr lib; tsc -d --module commonjs --outDir lib-commonjs; tsc --module es2015 --outDir lib",
    "format": "prettier --write **/*",
    "generate": "pegjs -o src/text/pegjs-parser.js src/text/pegjs-parser.pegjs",
    "lint": "eslint src --ext .ts",
    "lint-fix": "eslint src --ext .ts --fix",
    "test": "ava --verbose"
  },
  "dependencies": {
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@types/node": "^13.9.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "ava": "^3.5.2",
    "eslint": "^6.8.0",
    "eslint-plugin-ava": "^10.2.0",
    "eslint-plugin-import": "^2.20.2",
    "pegjs": "^0.10.0",
    "prettier": "^2.0.2",
    "source-map-support": "^0.5.16",
    "typescript": "^3.8.3"
  },
  "ava": {
    "files": [
      "lib-commonjs/**/*.test.js"
    ],
    "require": [
      "source-map-support"
    ]
  }
}
