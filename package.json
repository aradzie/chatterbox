{
  "name": "@aradzie/chatterbox",
  "version": "0.1.0",
  "description": "Generates text based on a context-free grammar",
  "author": "Aliaksandr Radzivanovich",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/aradzie/chatterbox.git"
  },
  "bugs": {
    "url": "https://github.com/aradzie/chatterbox/issues"
  },
  "homepage": "https://github.com/aradzie/chatterbox",
  "keywords": [
    "context-free grammar",
    "context-free",
    "grammar",
    "langauge generator",
    "generator",
    "lorem ipsum",
    "lorem",
    "ipsum"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib-esm/index.js",
  "scripts": {
    "compile": "rm -fr lib; rm -fr lib-esm; tsc; tsc -b tsconfig-esm.json",
    "format": "prettier --write 'src/**/*'",
    "generate": "peggy -o src/text/peggy-parser.js src/text/peggy-parser.peggy",
    "lint": "eslint src --ext .ts",
    "lint-fix": "eslint src --ext .ts --fix",
    "test": "ava --verbose"
  },
  "dependencies": {
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "ava": "^5.1.0",
    "eslint": "^8.31.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-import": "^2.27.4",
    "peggy": "^2.0.1",
    "prettier": "^2.8.2",
    "typescript": "^4.9.4"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "lib/"
      },
      "compile": false
    },
    "files": [
      "src/**/*.test.ts"
    ]
  }
}
